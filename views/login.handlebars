
<section class='test-section my-5 login'>
  <div class="login-header">Login</div>
  <form class='login-form' id='login-form'>
    <div class='row mx-auto justify-content-center'>
      <div class='form-group col-sm-3 full'>
        <label for="usernamInput">Username</label>
        <input class='form-control' id='usernameInput' placeholder='Username' required='true'>
      </div>
    </div>
    <div class='row mx-auto justify-content-center'>
      <div class='form-group col-sm-3 full'>
        <label for="passwordInput">Password</label>
        <input type='password' class='form-control' id='passwordInput' placeholder='Password' required='true'>
      </div>
    </div>
    <div class='row mx-auto justify-content-center my-4'>
      <div class='form-group col-sm-3 full'>
        <button type="submit" class='btn btn-primary form-control' id="login-user">Login</button>
      </div>
    </div>
  </form>
</section>
<script src="./js/login.js"></script>