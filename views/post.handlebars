<div class="post-container">
    <div class="post-body-container">
        <a href="/posts/{{post.id}}" class="post-anchor">
            <div class="post-header">{{post.title}}</div>
        </a>
        <div class="post-user-container">
            <div class="post-user">Posted by: 
                <a class="user" href="/users/{{post.user.id}}">
                    <span class="user">{{post.user.username}}</span>
                </a>
            </div>
        </div>
        <div class="post-body">{{post.content}}</div>
        <div class="post-date">Posted on: {{post.createdAt}}</div>
    </div>
        
    
    {{#each post.comments as |comment|}}
    {{>commentDetails}}
    {{/each}}
</div>
{{#if logged_in}}
<button class="comment-btn">Comment</button>
{{/if}}